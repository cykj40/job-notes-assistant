{
  "name": "job-notes-assistant",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install": "npm install --prefix my-job-notes-app && npm install --prefix backend",
    "build": "npm run build --prefix my-job-notes-app",
    "start": "npm run start --prefix backend",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --prefix my-job-notes-app",
    "dev:backend": "npm run dev --prefix backend"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.12"
  }
}
